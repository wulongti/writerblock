{
  "name": "WritersBlock",
  "version": "1.0.0",
  "description": "Author progress tracking app with leader board",
  "main": "app.js",
  "directories": {
    "src": "Main development directory"
  },
  "dependencies": {
    "angular": "^1.7.9",
    "angular-route": "^1.7.9",
    "angular-sanitize": "^1.6.9",
    "mn-touch": "^1.3.2",
    "src": "^1.1.2"
  },
  "devDependencies": {
    "autoprefixer": "^9.6.1",
    "connect": "^3.7.0",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.3",
    "sass": "^1.22.9",
    "serve-static": "^1.14.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "open": "start http://localhost:8080",
    "server": "node server.js",
    "devcss": "sass --watch src/sass/main.scss app.css",
    "buildcss": "sass src/sass/main.scss app.css",
    "devjs": "parcel watch src/scripts/app.js --out-dir ./",
    "buildjs": "parcel build src/scripts/app.js --out-dir ./",
    "dev": "run-p devcss devjs server open",
    "build": "run-s buildcss buildjs"
  },
  "keywords": [],
